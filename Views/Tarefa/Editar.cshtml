@model ToDoList.Models.Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}

<section class="vh-100" id="list1">
    <div class="d-flex container py-5 h-100 align-content-center justify-content-center" style="border-radius: .75rem; background-color: #eff1f2;">
        <div class="container h-50 w-50 align-self-center">
            <div class="row d-flex justify-content-center align-content-center h-100">
                <div class="d-flex flex-column justify-content-center align-content-center">
                    <h4 class="align-self-center">@ViewData["Title"]</h4>
                    <form asp-action="Editar" class="d-flex flex-column align-content-center justify-content-center h-100">
                        <div class="form-group d-flex justify-content-center">
                            <label asp-for="Descricao" class="control-label mx-1"></label>
                            <input asp-for="Descricao" type="form-control" class="mx-1"/>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <label asp-for="Completo" class="control-label mx-1"></label>
                            <input type="checkbox" asp-for="Completo" class="form-check-input mx-1" />
                        </div>
                        <br>
                        <div class="form-group d-flex justify-content-center py-1">
                            <input type="submit" value="Salvar" class="btn btn-primary mx-1">
                            <a asp-action="Index" class="btn btn-secondary mx-1">Voltar</a>
                        </div>    
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>